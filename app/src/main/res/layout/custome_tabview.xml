<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin5"
        android:layout_marginRight="@dimen/margin5"
        android:background="@drawable/custome_tab_background"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_tab_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/margin3"
            android:layout_gravity="center_horizontal" />

        <sa.upscale.coworking.CustomFont.MytextView
            android:id="@+id/tv_tab_title"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="@dimen/margin3"
            android:gravity="center"
            android:text="Mitting Room"
            android:textColor="@color/textcolor_input"
            android:textSize="10dp" />

    </LinearLayout>

</LinearLayout>